{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "demo_plugin Configuration",
  "description": "Configuration schema for demo_plugin plugin",
  "properties": {
    "enabled": {
      "type": "boolean",
      "description": "Enable or disable the plugin",
      "default": true
    },
    "task_interval": {
      "type": "integer",
      "description": "Interval for periodic task in seconds",
      "default": 300,
      "minimum": 60
    }
  },
  "required": ["enabled"]
}
